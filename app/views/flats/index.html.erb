

<div class="container mt-3">
  <div class="row"><h1> All My Flats</h1></div>
  <div class="row"> <p> All <%=  @flats.count %> flats available </p></div>
  <div class="row">
    <% @flats.each do |flat| %>
      <div class="col-md-4">
        <div class="flat-card">
          <div class="flat-card-content">
            <div class="flat-card-title">
              <%= flat.name %>
            </div>
            <p><%= flat.adress %></p>
            <div class="flex">
              <div class="flex align-items-center">
              <i class="fa-solid fa-people-line"></i> <%= flat.number_of_guests %>
                <%= flat.price_per_night %> <i class="fa-solid fa-euro-sign"></i>
              </div>
            </div>
          </div>
          <div class="flat-card-actions">
            <%= link_to "More info", flat_path(flat) %>
            <%= link_to "Edit", edit_flat_path(flat)%>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
